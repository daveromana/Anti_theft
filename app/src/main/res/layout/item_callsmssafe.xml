<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_black_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="黑名单号码"
        android:textColor="#88ff0000"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_black_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_black_phone"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="拦截模式"
        android:textColor="#880000ff"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/iv_delete_blacknumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_delete_btn"/>

</RelativeLayout>
