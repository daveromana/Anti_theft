<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_CallSmsSafe"
        style="@style/text_title_style"
        android:text="黑名单列表"/>

    <ListView
        android:id="@+id/lv_blacknum"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_CallSmsSafe"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_CallSmsSafe"
        android:layout_alignBottom="@+id/tv_CallSmsSafe"
        android:layout_alignParentEnd="true"
        android:background="@drawable/btn_default"
        android:onClick="btn_addBlackNumber"
        android:text="＋"
        android:textSize="26sp"/>

</RelativeLayout>